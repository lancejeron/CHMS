  body
    // Page Wrapper
    #page-wrapper
      // Header
      header#header
        h1 COFFEE SHOP

        nav#nav
          ul
            li.special
              a.menuToggle(href='#menu')
                span Menu
              #menu
                ul
                  li
                    a(href='#') FAQ
                  li
                    a(href='/login') Log out
      ul.ul
        li.li
          a(href='/home2/page/1') MY COFFEESHOPS
        li.li
          a(href='/home2') MY Profile
        
    br
    ul.ul
      form(action='add_shop.html')
        li
            a(href="/home2/addcoffeeshop") ADD a Coffeeshop
        li
        button.button DELETE
    br
    each user in usertab
      h6 hello #{user.strName}, These are your coffeeshops
        
          table
            tr
              th Coffeeshop Name
              th Address
              th Telephone Number
              th Action
            each stud in studtab
              tr
                td #{stud.strCName}
                td #{stud.strCAddress}
                td #{stud.strCTnumber}
                td 
                  a(href=`/admin/users/${stud.id}`): span.fa.fa-edit
                  | &nbsp;
                  a(href=`/admin/users/${stud.id}/remove`): span.fa.fa-remove
    
    // Footer
    footer#footer
      ul.icons
        li
          a.icon.fa-twitter(href='#')
            span.label Twitter
        li
          a.icon.fa-facebook(href='#')
            span.label Facebook
        li
          a.icon.fa-instagram(href='#')
            span.label Instagram
        li
          a.icon.fa-dribbble(href='#')
            span.label Dribbble
        li
          a.icon.fa-envelope-o(href='#')
            span.label Email
      ul.copyright
        li Â© COFFEEMATE
