extends ../../../templates/navbaradmin.pug

block content
  each user in usertab
    div(align='center')
      h3.title
        b PUP Student Market Admin Page
      h3.subtitle &nbsp#{user.strName}
      hr(style='border: 0.5px solid #000105')
      h3.subtitle
        b Excluding Admin Accounts:
    hr(style='border: 0.5px solid #000105')
    each reg in regtab
      each ver in vertab
        each nver in nvertab
          each ban in bantab
            each unreg in unregtab
              each rej in rejtab
