                  p &nbsp&nbsp&nbsp&nbsp&nbsp
                    b Not Verified Count:
                  br
                  h3.subtitle
                    b Banned Account Count:
                  h3.subtitle
                    b Unregistered Account Count:
                  h3.subtitle
                    b Rejected Registration Count:
                div(style='width: 42%; float: right')
                  h3.subtitle &nbsp&nbsp
                    b #{reg.CNT}
                  p &nbsp&nbsp
                    b #{ver.CNT}
                  p &nbsp&nbsp
                    b #{nver.CNT}
                  br
                  h3.subtitle &nbsp&nbsp
                    b #{ban.CNT}
                  h3.subtitle &nbsp&nbsp
                    b #{unreg.CNT}
                  h3.subtitle &nbsp&nbsp
                    b #{rej.CNT}
