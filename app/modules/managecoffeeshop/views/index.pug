doctype html
html
  head
    title Generic - Spectral by HTML5 UP
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='/assets/css/main.1.css')
    link(rel='stylesheet', href='/assets/css/home.1.css')
    link(rel='stylesheet' href='/assets/css/login.4.css')
    link(rel="stylesheet" href="/assets/font-awesome-4.7.0/css/posts.css")

  body
    // Page Wrapper
    #page-wrapper
      // Header
      header#header
        nav#nav
          ul
            li.special
              a.menuToggle(href='#menu')
                span Menu
              #menu
                ul
                  li
                    a(href='#') Help
                  li
                    a(href='/login') Log out
            li.li
              a(href='/home2/page/1') HOME
            li.li
              a(href='/managecoffeeshop/page/1') My Coffeeshop

        br
    #div1(style="width:auto; height:auto; margin-left:5%; margin-right:5%; margin-top:5%; background-color:#C8B188; border-radius: 10px; padding: 10px;")    
            button(type="button" onclick="document.getElementById('id01').style.display='block'", style='width:auto; margin-left:37%; background-color:#93500C;') ADD Coffeeshop
            
            br
            br
            table
                tr
                    th Coffeeshop Name
                    th Address
                    th Telephone Number
                    th Action
                each stud in studtab
                    tr
                        td #{stud.strCName}
                        td #{stud.strCAddress}
                        td #{stud.strCTnumber}
                        td 
                
                            a(href="/managecoffeeshop/page/1/viewcoffeeshop/"+stud.intCID, target="_blank"): span.fa.fa-eye
                            | &nbsp;
                            a(href='/managecoffeeshop/page/1/editcoffeeshop/'+stud.intCID): span.fa.fa-edit
                            | &nbsp;
                            a(href='/managecoffeeshop/page/1/removecoffeeshop/'+stud.intCID): span.fa.fa-remove

    #id01.modal
        form.modal-content.animate(method="POST" action="managecoffeeshop/add")
            span.close(onclick="document.getElementById('id01').style.display='none'", title='Close Modal') Ã—
            .group(style="margin-top:1%;color:black;") 
                label(style="color:black;") Coffeeshop Name
                input(style="color:black;")(type="text" name="Cname")
                br
            .group(style="margin-top:1%;color:black;") 
                label(style="color:black;") Coffeeshop Address
                input(style="color:black;")(type="text" name="Caddress")
                br
            .group(style="margin-top:1%; color:black;") 
                label(style="color:black;") Upload Business Permit
                input.file-input(style="color:black;")(type='file', name='bpermit', accept='image/*')
            .group
            br
            input.button(type='submit', style='background-color:#93500C;', value='Add')
            br
            br
            br
            a.button(href="/managecoffeeshop/page/1") Back



// Scripts
script.
    var modal = document.getElementById('id01');
      window.onclick = function(event) {
        if (event.target == modal) {
            modal.style.display = "none";
        } 
    }

