extends ../../../templates/navbar.pug

block content
    meta(http-equiv='content-type', content='text/html; charset=UTF-8')
    meta(charset='utf-8')
    meta(content='IE=edge,chrome=1', http-equiv='X-UA-Compatible')
    meta(name='viewport', content='width=device-width')
    link(rel='shortcut icon', href='../favicon.ico')
    meta(name='description', content="In this css image slider tutorials we build pure css image slider without using any javascript. Let's have a look the demo and download source code.")
    meta(name='keywords', content='tutorial,css3,image slider,css,html,html5,css slider,slider,gallery,css transitions')
    link(rel="stylesheet" href="/assets/font-awesome-4.7.0/css/component.css")
    link(rel="stylesheet" href="/assets/font-awesome-4.7.0/css/demo.css")
        link(rel="stylesheet" href="/assets/font-awesome-4.7.0/css/column.css")
    each post in posttab
      .site
        header.masthead
          h2.site-title  
            a(href='/categories/' + post.strCatName +'/page/1') #{post.strCatName}
        main#content.main-content
          h2.title #{post.strItemTitle}
            body
              header
                article#cc-slider
                  input#slide1(checked='checked', name='cc-slider', type='radio')
                  input#slide2(name='cc-slider', type='radio')
                  input#slide3(name='cc-slider', type='radio')
                  input#slide4(name='cc-slider', type='radio')
                  input#slide5(name='cc-slider', type='radio')
                  #cc-slides
                    #overflow
                      .inner
                        article
                          .cctooltip
                            h3 |Date :
                                p &nbsp #{post.date}
                          img(src='/images/uploaded_images/'+ post.strFirstPic)
                        article
                          .cctooltip
                            h3 |Date :
                                p &nbsp #{post.date}
                            h4
                              b Price :
                                b &nbsp Php #{post.price}
                          img(src='/images/uploaded_images/'+ post.strSecondPic)
                        article
                          .cctooltip
                            h3 |Date :
                                p &nbsp #{post.date}
                            h4
                              b Price :
                                b &nbsp Php #{post.price}
                          img(src='/images/uploaded_images/'+ post.strThirdPic)
                  #controls
                    label(for='slide1')
                    label(for='slide2')
                    label(for='slide3')
        aside.sidebar
          h3 The Sidebar
          p The sidebar typically contains things like:
          ul
            li Contact Information:
            li Email : #{post.strEmail}
            li Others : #{post.txtContact}
        aside.twin
          a.button.is-primary.is-inverted.is-outlined(href='/categories/' + post.strCatName + '/' + post.intItemID + '/order') BUY
        aside.twin
          a.button.is-primary.is-inverted.is-outlined(href='/categories/' + post.strCatName +'/page/1') BACK TO CATEGORY
        footer.colophon.grid
          aside