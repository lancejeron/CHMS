doctype html
html
  head
    title Home
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='/assets/css/main.1.css')
    link(rel='stylesheet', href='/assets/css/home.1.css')
    link(rel="stylesheet" href="/assets/font-awesome-4.7.0/css/posts.css")
    // seach table
    link(rel='stylesheet', type='text/css', href='/assets/css/style.css')
    script(src='/assets/js/tablesearch.js')

  body
    // Page Wrapper
    #page-wrapper
      // Header
      header#header
        nav#nav
          ul
            li.special
              a.menuToggle(href='#menu')
                span Menu
              #menu
                ul
                  li
                    a(href='#') Help
                  li
                    a(href='/login') Log out
            li.li
              a(href='/home/page/1') HOME
            li.li
              a(href='/profile') PROFILE
            li.li
              a(href='/coffeeshops/page/1') COFFEESHOP
    #div(style="background-color:#C8B188;margin-top:5%; margin-left:5%; margin-right:5%; padding-top:10px; padding-right:10px; padding-left:10px; border-radius:5px;")
      each stud in studtab
            if stud.page == stud.curpage
            .card
              h3.card-header
              h3.subtitle #{stud.strName}
              .card-body
                #image-container
                  img(src='/images/'+ stud.strPicture,  alt='')
                p.card-text
                h9 Details:
                ul
                  li Age: #{stud.Age}
                  li Address: #{stud.strAddress}
                  li Favorite Coffee: #{stud.strFavCoffee}
                  br
                  a.button(href="/profile/"+stud.intID, target="_blank") view profile
                  |
                  a.button(href="/invite/"+stud.intID) Invite
    a.button(style="margin-left:40%; margin-top:5%;")(href="/home/page/1") shuffle
      
    // Scripts
    script(src='/assets/js/jquery.min.js')
    script(src='/assets/js/jquery.scrollex.min.js')
    script(src='/assets/js/jquery.scrolly.min.js')
    script(src='/assets/js/skel.min.js')
    script(src='/assets/js/util.js')
    script(src='/assets/js/main.js')
    //search table
    script(type='text/javascript').
      new TableSearch('searchBox', 'dataTable', { noResultsText: 'Nothing found! Try again' }).init();
